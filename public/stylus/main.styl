 :root
    --Success #1cce28
    --LimeGreen #60dd49
    --DangerL #fc047f
    --Danger #fc2366
    --DangerS #cc1850
    --White #ffffff
    --Warning #ffed38
    --WarningS #ffd816

.btn
    &-success
        background-color var(--LimeGreen) !important
        border-color  var(--LimeGreen) !important
        box-shadow 3px 3px 6px rgba(0,0,0,0.3) !important
        &:hover
            background-color var(--Success) !important
            border-color var(--Success) !important
    &-danger 
        background-color var(--DangerL) !important
        border-color  var(--DangerL) !important
        box-shadow 3px 3px 6px rgba(0,0,0,0.3) !important
        &:hover
            background-color var(--Danger) !important
            border-color  var(--Danger) !important
    &-warning
        background-color var(--Warning) !important
        border-color  var(--Warning) !important
        box-shadow 3px 3px 6px rgba(0,0,0,0.3) !important
        &:hover
            background-color var(--WarningS) !important
            border-color  var(--WarningS) !important
        &:focus
            background-color var(--WarningS) !important
            border-color  var(--WarningS) !important
a
    &.navbar-brand
        filter: drop-shadow(0 0 4px rgb(0 0 0/50%)) !important
        color var(--White) !important
    &.nav-link
        filter: drop-shadow(0 0 4px rgb(0 0 0/50%)) !important
        color var(--White) !important

.navbar
    background-color var(--Danger)


.username
    filter: drop-shadow(0 0 4px rgb(0 0 0/50%)) !important
    color var(--White) !important

.logout
    box-shadow 4px 4px 10px rgba(136, 136, 136,0.8) !important

.contorno
    box-shadow 3px 3px 6px rgba(0,0,0,0.3) !important
    border 1px solid rgba(0,0,0,0.2)




@media (min-width 576px)
    .bars
        filter: drop-shadow(0 0 4px rgb(0 0 0/50%)) !important
        color var(--White) !important
    &.navbar
            &-toggler
                border-color rgba(255,255,255,0.5) !important
            &-ligth
                border-color  rgba(255,255,255,0.5) !important
    .logout
        background-color var(--Danger) !important
        color white !important 
        box-shadow none !important
        border 0 !important
        &:hover
            background-color var(--DangerS) !important
            color var(--White) !important
    &.dropdown
        &-item
            &:hover
                background-color var(--DangerS) !important
                color var(--White) !important

    